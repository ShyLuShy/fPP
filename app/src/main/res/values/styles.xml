<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="mainStyle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="activityStyle" parent="TextAppearance.AppCompat">
        <item name="android:colorBackground">@color/black</item>
    </style>

    <style name="shapeAppearance">
        <item name="cornerSize">10%</item>
        <item name="android:padding">2dp</item>
        <item name="strokeWidth">2dp</item>

    </style>

    <style name="textStyle">

        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/colorOnPrimary</item>
        <item name="android:textAlignment">center</item>
        <item name="background">@color/colorOnPrimary</item>
        <item name="android:fontFamily">@font/cygre</item>
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">30dp</item>
    </style>

    <style name="textStyle2">

        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorOnPrimary</item>
        <item name="android:textAlignment">center</item>
        <item name="background">@color/colorOnPrimary</item>
        <item name="android:fontFamily">@font/cygre</item>
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">24dp</item>
    </style>

    <style name="imageSize">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:scaleType">centerCrop</item>


    </style>





</resources>